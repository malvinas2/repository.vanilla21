<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">3</defaultcontrol>
    <include>DefaultSkinSettings</include>
    <controls>

        <!--Global Background-->
        <include>GlobalBackground</include>
 		<!-- Now playing -->
		<include>NowPlayingModern</include>
		
        <!--Header-->
        <include>Header</include>
  		<control type="group">
			<include>animation_window_open_close</include>
			<bottom>125</bottom>
			<height>75%</height>
		   <!--Panel-->
			<control type="image">
				<posx>50</posx>
				<width>1820</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			
			<control type="image">
				<posx>50</posx>
				<width>520</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>
			
			<control type="grouplist" id="3000">
				<posx>90</posx>
				<posy>20</posy>
				<width>450</width>
				<ondown>9000</ondown>
				<!--default setting buttons-->
				<control type="grouplist" id="3">
					<description>Button Area</description>
					<height>750</height>
					<width>450</width>
					<itemgap>5</itemgap>
					<onleft>5</onleft>
					<onright>5</onright>
					<ondown>3001</ondown>
					<orientation>vertical</orientation>
					<include>animation_fade_visible_hidden</include>
				</control>
			</control>
			
			<control type="grouplist" id="5">
				<description>Control Area</description>
				<posx>605</posx>
				<posy>20</posy>
				<width>1230</width>
				<height>80%</height>
				<itemgap>5</itemgap>
				<onleft>3</onleft>
				<onright>3</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<orientation>vertical</orientation>
				<visible>!Control.HasFocus(3003)</visible>
			</control>
			
			<control type="button" id="7">
				<description>Default Button</description>
				<label></label>
				<font>Reg28</font>
				<align>left</align>
				<height>47</height>
				<width>450</width>
			</control>
			
			<control type="radiobutton" id="8">
				<description>Default Radio Button</description>
				<font>Reg28</font>
				<align>left</align>
				<height>47</height>
				<radioposx>1075</radioposx>
			</control>
			<control type="label" id="14">
				<include>SkinSettings_Header</include>
				<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
			</control>
			<control type="spincontrolex" id="9">
				<description>Default Spin Control</description>
				<font>Reg28</font>
				<align>left</align>
				<height>47</height>
			</control>
			<control type="sliderex" id="13">
				<description>Default Slider</description>
				<posx>0</posx>
				<posy>0</posy>
				<font>Reg28</font>
				<height>47</height>
				<!-- <include>DialogButton</include> -->
				<textwidth>352</textwidth>
				<textoffsetx>50</textoffsetx>
				<sliderwidth>140</sliderwidth>
				<sliderheight>47</sliderheight>
				<align>left</align>
			</control>

			<control type="colorbutton" id="15">
				<description>Default ColorButton</description>
				<font>Reg28</font>
			</control>

			<control type="button" id="10">
				<description>Default Category Button</description>
				<font>Reg28</font>
				<align>left</align>
				<height>47</height>
				<width>450</width>
			</control>
			<control type="grouplist" id="9000">
				<posx>90</posx>
				<posy>610</posy>
				<width>450</width>
				<height>600</height>
				<onleft>9000</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<onback>3</onback>
				<itemgap>5</itemgap>
				<control type="label" id="200">
					<height>47</height>
					<font>Reg28</font>
					<font>Reg28</font>
					<label>$LOCALIZE[31071]</label>
					<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
					<align>left</align>
				</control>
				<control type="button" id="20">
					<description>Setting level button</description>
					<font>Reg28</font>
					<align>left</align>
					<height>47</height>
					<label>$LOCALIZE[10037]</label>
					<width>450</width>
					<onclick>SettingsLevelChange</onclick>
				</control>
				<control type="button" id="21">
					<description>Reset button</description>
					<font>Reg28</font>
					<align>left</align>
					<height>47</height>
					<label>$LOCALIZE[10035]</label>
					<width>450</width>
					<onclick>SettingsReset</onclick>
				</control>
			</control>
			<control type="textbox" id="6">
				<description>description area</description>
				<left>600</left>
				<bottom>25</bottom>
				<scroll>true</scroll>
				<height>102</height>
				<width>1230</width>
				<textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
				<font>Reg28</font>
				<align>justify</align>
				<visible>!Control.HasFocus(3003)</visible>
			</control>
			
		</control>
		<!--Footer-->
        <include condition="!Skin.HasSetting(nofooterbar)">Footer</include>
		<!--Titan Version-->
        <include>TitanVersion</include>
		<include condition="Skin.HasSetting(DebugGrid) | Skin.HasSetting(DebugInfo)">DebugInfo</include>
    </controls>
</window>