<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>11</defaultcontrol>
    <controls>
        <control type="group">
            <include>animation_window_open_close</include>
            <control type="group">
                <left>0</left>
                <top>-70</top>
                <control type="image">
                    <left>-100</left>
                    <top>0</top>
                    <width>2200</width>
                    <height>148</height>
                    <texture border="5">diffuse/panel.png</texture>
					<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
                    <aspectratio>stretch</aspectratio>
                </control>
                 <!-- close dialog -->
                <control type="group">
                    <include>animation_fade_visible_hidden</include>
                    <right>40</right>
                    <width>60</width>
					<top>80</top>
                    <include condition="Skin.HasSetting(EnableTouchSupport)">close_button</include>
                </control>
                <control type="label" id="10">
                    <description>Option Name</description>
                    <left>100</left>
                    <top>80</top>
                    <width>380</width>
                    <height>34</height>
                    <label></label>
                    <align>left</align>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="label" id="12">
                    <description>Slider Value</description>
                    <left>1520</left>
                    <top>80</top>
                    <label></label>
                    <width>330</width>
                    <height>40</height>
                    <align>left</align>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="slider" id="11">
                    <description>Slider</description>
                    <left>500</left>
                    <top>86</top>
                    <width>1000</width>
                    <height>35</height>
                    <onup>11</onup>
                    <ondown>11</ondown>
                    <onleft>11</onleft>
                    <onright>11</onright>
                </control>
            </control>
        </control>
    </controls>
</window>