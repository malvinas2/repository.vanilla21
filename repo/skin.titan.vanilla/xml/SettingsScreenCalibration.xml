<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>8</defaultcontrol>
    <controls>
        <control type="videowindow" id="20">
            <description>videowindow</description>
            <include>DimensionsFullscreen</include>
        </control>
        <control type="group">
            <control type="mover" id="8">
                <description>top left mover</description>
				<left>0</left>
				<top>0</top>
                <texturefocus>calibrate/cal_tl_fo.png</texturefocus>
                <texturenofocus>calibrate/cal_tl.png</texturenofocus>
                <width>128</width>
                <height>128</height>
				<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
					<eventconfig type="up" />
					<eventconfig type="down" />
					<eventconfig type="left" />
					<eventconfig type="right" />
			</movingspeed>
            </control>
            <control type="mover" id="9">
                <description>right bottom mover</description>
				<left>700</left>
				<top>500</top>
                <texturefocus>calibrate/cal_br_fo.png</texturefocus>
                <texturenofocus>calibrate/cal_br.png</texturenofocus>
                <width>128</width>
                <height>128</height>
				<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
					<eventconfig type="up" />
					<eventconfig type="down" />
					<eventconfig type="left" />
					<eventconfig type="right" />
			</movingspeed>
            </control>
            <control type="mover" id="10">
                <description>subtitle position mover</description>
				<left>200</left>
				<top>500</top>
				<!-- NOTE: The image must have 40px of transparent on top and bottom the bar -->
                <texturefocus>calibrate/cal_sub_fo.png</texturefocus>
                <texturenofocus>calibrate/cal_sub.png</texturenofocus>
                <width>380</width>
                <height>90</height>
				<movingspeed acceleration="180" maxvelocity="300" resettimeout="200" delta="1">
					<eventconfig type="up" />
					<eventconfig type="down" />
				</movingspeed>
            </control>
			<control type="mover" id="12">
				<description>reset calibration</description>
				<left>0</left>
				<top>900</top>
				<width>30</width>
				<height>30</height>
				<texturefocus colordiffuse="red">common/reboot1.png</texturefocus>
				<texturenofocus>common/reboot1.png</texturenofocus>
			</control>
            <control type="resize" id="11">
                <description>pixel aspect ratio</description>
				<left>0</left>
				<top>390</top>
                <width>500</width>
                <height>500</height>
                <texturefocus>calibrate/cal_ratio_fo.png</texturefocus>
                <texturenofocus>calibrate/cal_ratio.png</texturenofocus>
				<movingspeed acceleration="140" maxvelocity="300" resettimeout="180" delta="1">
					<eventconfig type="left" />
					<eventconfig type="right" />
				</movingspeed>
            </control>
            <control type="label" id="2">
                <description>coordinates label</description>
				<left>0</left>
				<top>60</top>
                <width>100%</width>
                <align>center</align>
                <label></label>
                <font>Light40</font>
                <shadowcolor>FF000000</shadowcolor>
            </control>
            <control type="label" id="3">
                <description>help information</description>
                <left>0</left>
				<top>110</top>
                <width>100%</width>
                <align>center</align>
                <label></label>
                <font>Light40</font>
                <shadowcolor>FF000000</shadowcolor>
            </control>
			<control type="label" id="4">
				<description>calibration value</description>
				<left>0</left>
				<top>210</top>
				<width>100%</width>
				<align>center</align>
				<label></label>
				<font>Light40</font>
				<shadowcolor>FF000000</shadowcolor>
			</control>
			<control type="label">
				<description>window title</description>
				<left>0</left>
				<top>10</top>
				<width>100%</width>
				<align>center</align>
				<label>$LOCALIZE[214]</label>
				<font>Light40</font>
				<shadowcolor>FF000000</shadowcolor>
			</control>
        </control>
    </controls>
</window>