<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol></defaultcontrol>
    <controls>
        <!-- Default notification -->
        <control type="group">
     		<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-400" end="0,0" tween="cubic" easing="out" time="500" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="0,0" end="0,-400" tween="cubic" easing="out" time="500" />
			</animation>
			
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>100%</width>
				<height>130</height>
				<texture border="5">diffuse/panel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			</control>

            <control type="group">
				<left>60</left>
				<top>20</top>
                <control type="image" id="400">
                    <description>Icon</description>
                    <left>0</left>
                    <top>10</top>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <texture>DefaultIconInfo.png</texture>
                </control>
                <control type="label" id="401">
                    <description>Line 1</description>
                    <left>90</left>
                    <top>0</top>
                    <width>1500</width>
                    <height>50</height>
                    <font>Bold38</font>
					<textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="label" id="402">
                    <description>Line 2</description>
                    <left>90</left>
                    <top>40</top>
                    <width>1500</width>
                    <height>50</height>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
					<shadowcolor>black</shadowcolor>
                    <scroll>false</scroll>
                </control>
            </control>
        </control>
	</controls>
</window>