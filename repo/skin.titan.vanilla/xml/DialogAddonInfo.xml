<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <onunload>ClearProperty(showinfo,addoninformation)</onunload>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
            <control type="image">
                <left>630</left>
                <top>0</top>
                <width>1340</width>
                <height>100%</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            <!-- close dialog -->
            <control type="group">
                <include>animation_fade_visible_hidden</include>
                <right>60</right>
                <width>60</width>
                <top>40</top>
                <include condition="Skin.HasSetting(EnableTouchSupport)">close_button</include>
            </control>
           <!--Header-->
            <control type="label">
                <description>Heading</description>
                <left>700</left>
                <top>10</top>
                <width>1200</width>
				<font>Bold45</font>
                <textcolor>$INFO[Skin.String(GeneralHighlightTextColor)]</textcolor>
				<shadowcolor>black</shadowcolor>
                <align>left</align>
				<height>100</height>
				<label>$LOCALIZE[24003]</label>
            </control>
			<!-- broken text -->
			<control type="label">
				<left>700</left>
				<top>95</top>
				<width>1200</width>
				<font>Reg36</font>
				<align>left</align>
				<label>$VAR[AddonLifecycleType]</label>
				<visible>String.IsEqual(ListItem.AddonLifecycleType,$LOCALIZE[24170]) | String.IsEqual(ListItem.AddonLifecycleType,$LOCALIZE[24171])</visible>
            </control>			
			<!-- title -->
			<control type="label">
				<left>700</left>
				<top>150</top>
				<width>1200</width>
				<font>Reg36</font>
				<align>left</align>
				<label>$INFO[ListItem.AddonName] $INFO[ListItem.AddonVersion] $LOCALIZE[31830] $INFO[ListItem.AddonCreator]</label>
            </control>
			<control type="image">
				<left>680</left>
                <top>220</top>
				<width>1200</width>
				<height>250</height>
				<texture border="5">dialogs/default/inner.png</texture>
			</control>
			<!--Icon-->
            <control type="image">
                <left></left>
                <right>60</right>
                <top>235</top>
                <width>350</width>
                <height>220</height>
                <fadetime>800</fadetime>
				<aspectratio align="right" aligny="center" scalediffuse="true">keep</aspectratio>
				<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png" border="5">$INFO[ListItem.Icon]</texture>
            </control>
            <control type="grouplist">
                <left>680</left>
                <top>220</top>
                <control type="button">
                     <!--Addon Type-->
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[21866]:</label>
                    <label2>$INFO[ListItem.AddonType]</label2>
                    <enable>false</enable>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
					<visible>!String.IsEmpty(ListItem.AddonType)</visible>
                </control>
                <control type="button">
                    <!--Origin-->
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[31831]:</label>
                    <label2>$INFO[ListItem.AddonOrigin]</label2>
                    <enable>false</enable>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
					<visible>!String.IsEmpty(ListItem.AddonOrigin)</visible>
                </control>
                <control type="button">
                    <!--Status-->
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[126]:</label>
                    <label2>$INFO[ListItem.Property(Addon.Status)]$INFO[ListItem.Property(Addon.ValidUpdateVersion)]</label2>
                    <enable>false</enable>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
					<visible>!String.IsEmpty(ListItem.Property(Addon.Status))</visible>
                </control>
                <control type="fadelabel">
                    <!--Disclaimer-->
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
					<autoscroll>true</autoscroll>
                    <label>   $INFO[ListItem.AddonDisclaimer]</label>
					<textcolor>red</textcolor>
					<visible>!String.IsEmpty(ListItem.AddonDisclaimer)</visible>
                </control>
            </control>
            <control type="image">
                <left>680</left>
                <top>586</top>
                <width>1200</width>
                <height>370</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox">
                <description>Plot value</description>
                <left>700</left>
                <top>606</top>
                <width>1160</width>
                <height>340</height>
                <align>justify</align>
                <pagecontrol>60</pagecontrol>
                <label fallback="19055">$INFO[ListItem.AddonSummary][CR]$INFO[ListItem.AddonDescription]</label>
                <visible>String.IsEmpty(Window.Property(showinfo))</visible>
            </control>
            <control type="textbox">
                <description>News value</description>
                <left>700</left>
                <top>606</top>
                <width>1160</width>
                <height>340</height>
                <align>justify</align>
                <pagecontrol>60</pagecontrol>
                <label fallback="19055">$INFO[ListItem.AddonNews]</label>
                <visible>String.IsEqual(Window.Property(showinfo),news)</visible>
            </control>
            <!-- screenshots -->
            <control type="panel" id="50">
                <left>680</left>
                <top>620</top>
                <width>1200</width>
                <height>340</height>
                <orientation>horizontal</orientation>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <preloaditems>4</preloaditems>
                <visible>String.IsEqual(Window.Property(showinfo),screenshots)</visible>
                <itemlayout height="340" width="600">
                    <control type="image">
                        <bordersize>8</bordersize>
                        <texture background="true" diffuse="home/home_matte2.png">$INFO[ListItem.Icon]</texture>
                    </control>
                </itemlayout>
                <focusedlayout height="340" width="600">
                    <control type="image">
                        <!--focus image-->
                        <texture diffuse="home/home_matte2.png">colors/color_white.png</texture>
                        <colordiffuse>$INFO[Skin.String(GeneralHighlightTextColor)]</colordiffuse>
                    </control>
                    <control type="image">
                        <bordersize>8</bordersize>
                        <texture background="true" diffuse="home/home_matte2.png">$INFO[ListItem.Icon]</texture>
                    </control>
                </focusedlayout>
            </control>
			<!--Button Group-->
            <control type="grouplist" id="9000">
                <left>680</left>
                <top>960</top>
				<orientation>horizontal</orientation>
				<itemgap>5</itemgap>
				<onup>50</onup>
				<width>1205</width>
                <control type="button" id="11111">
                    <!--Close-->
                    <width>290</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[222]</label>
					<include>DialogButtonOther</include>
                    <onclick>Close</onclick>
                    <visible>Control.IsEnabled(11111)</visible>
                </control>
                <control type="togglebutton" id="22111">
                    <!--screenshots-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[20008]</label>
                    <altlabel>$LOCALIZE[29915]</altlabel>
					<usealttexture>String.IsEqual(Window.Property(showinfo),screenshots)</usealttexture>
					<include>DialogButtonOther</include>
                    <onclick condition="!String.IsEqual(Window.Property(showinfo),screenshots)">SetProperty(showinfo,screenshots)</onclick>
                    <onclick condition="String.IsEqual(Window.Property(showinfo),screenshots)">ClearProperty(showinfo)</onclick>
                    <visible>Integer.IsGreater(Container(50).NumItems,0)</visible>
                </control>
                <control type="togglebutton" id="22112">
                    <!--news-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[29916]</label>
                    <altlabel>$LOCALIZE[29915]</altlabel>
					<usealttexture>String.IsEqual(Window.Property(showinfo),news)</usealttexture>
                    <onclick condition="!String.IsEqual(Window.Property(showinfo),news)">SetProperty(showinfo,news)</onclick>
                    <onclick condition="String.IsEqual(Window.Property(showinfo),news)">ClearProperty(showinfo)</onclick>
					<include>DialogButtonOther</include>
                </control>
                <control type="button" id="12">
                  <!--Launch Addon button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[518]</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(12)</visible>
                </control>
				<control type="button" id="8">
                  <!--Update Addon button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[24069]</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(8)</visible>
                </control>
				<control type="button" id="6">
                    <!--Install/Uninstall Addon button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[24022]</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(6)</visible>
					<selected>ListItem.Property(addon.isinstalled) | !Window.IsActive(addonbrowser)</selected>
                </control>
                <control type="button" id="7">
                    <!--Enable/Disable Addon button-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[24021]</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(7)</visible>
					<selected>!String.StartsWith(Control.GetLabel(7),$LOCALIZE[24022]) | !Window.IsActive(addonbrowser)</selected>
                </control>
                <control type="button" id="9">
                   <!--Addon Settings-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[24020]</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(9)</visible>
                </control>
				<control type="button" id="10">
                   <!--Dependencies Settings-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[39024]</label>
					<include>DialogButtonOther</include>
					<visible>Control.IsEnabled(10)</visible>
                </control>
                <control type="radiobutton" id="13">
                    <!--enable auto update-->
                    <width>400</width>
                    <textoffsetx>30</textoffsetx>
                    <textwidth>270</textwidth>
					<height>80</height>
                    <align>left</align>
                    <label>$LOCALIZE[21340]</label>
					<radioposx>280</radioposx>
					<include>DialogButtonOther</include>
                    <visible>Control.IsEnabled(13)</visible>
                </control>
				<control type="button" id="14">
                    <!-- versions-->
                    <width>300</width>
                    <height>80</height>
                    <align>center</align>
                    <label>$LOCALIZE[24069]</label>
					<include>DialogButtonOther</include>
                    <visible>Control.IsEnabled(14)</visible>
                </control>
            </control>
            <!--Arrows-->
            <control type="image">
                <animation effect="fade" start="100" end="50" tween="sine" easing="inout" time="800" pulse="true" reversible="false" condition="true">Conditional</animation>
                <left></left>
				<right>10</right>
                <!-- <bottom>52</bottom> -->
                <top>970</top>
                <width>20</width>
                <height>60</height>
                <aspectratio>keep</aspectratio>
                <texture>dialogs/videoinfo/arrow.png</texture>
                <visible>!Control.HasFocus(51)</visible>
                <colordiffuse>white</colordiffuse>
                <visible>Container(9000).HasNext</visible>
            </control>
            <control type="image">
                <animation effect="fade" start="100" end="50" tween="sine" easing="inout" time="800" pulse="true" reversible="false" condition="true">Conditional</animation>
                <left></left>
				<right>1250</right>
                <!-- <bottom>52</bottom> -->
                <top>970</top>
                <width>20</width>
                <height>60</height>
                <aspectratio>keep</aspectratio>
                <texture flipx="true">dialogs/videoinfo/arrow.png</texture>
                <visible>!Control.HasFocus(51)</visible>
                <colordiffuse>white</colordiffuse>
                <visible>Container(9000).HasPrevious</visible>
            </control>
        </control>
    </controls>
</window>