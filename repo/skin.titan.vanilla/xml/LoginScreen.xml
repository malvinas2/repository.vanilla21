<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">52</defaultcontrol>
	
    <controls>
        <control type="group">
            <!--Global Background-->
            <include>GlobalBackground</include>
            <include>Header</include>
            <control type="label" id="2">
                <visible>false</visible>
            </control>
            
            <!-- bg panel -->
            <control type="image">
                <posx>605</posx>
                <posy>100</posy>
                <width>710</width>
                <height>880</height>
                <texture border="15">diffuse/bgpanel.png</texture>
                <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            <control type="image">
                <posx>605</posx>
                <posy>100</posy>
                <width>710</width>
                <height>880</height>
                <texture border="15">diffuse/bgpanel.png</texture>
                <bordersize>10</bordersize>
                <colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
            
            <!--Login Screen-->
            <control type="group">
                <control type="list" id="52">
                    <posx>625</posx>
                    <posy>120</posy>
                    <width>670</width>
                    <height>840</height>
                    <onleft>53</onleft>
                    <onright>53</onright>
                    <onup>52</onup>
                    <ondown>53</ondown>
                    <pagecontrol></pagecontrol>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <movement>1</movement>
                    <itemlayout height="140" width="670">
                        <control type="image">
                            <posx>0</posx>
                            <posy>1</posy>
                            <width>100%</width>
                            <height>100%</height>
                            <texture>dialogs/default/separator.png</texture>
                        </control>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <width>120</width>
                            <height>120</height>
                            <texture background="true" fallback="common/profil/avatar.png">$INFO[Listitem.Icon]</texture>
                            <aspectratio>keep</aspectratio>
                        </control>
                        <control type="group">
                            <control type="label">
                                <posx>140</posx>
                                <posy>22</posy>
                                <width>490</width>
                                <height>40</height>
                                <textcolor fallback="white">$INFO[Skin.String(GeneralTextColor)]</textcolor>
                                <label>$INFO[ListItem.Label]</label>
                                <font>Light42</font>
                                <align>left</align>
                                <aligny>center</aligny>
                                <animation effect="slide" start="0" end="0,20" time="0" condition="Skin.HasSetting(LoginScreen_HideLoginInfo)">Conditional</animation>
                            </control>
                            <control type="label">
                                <posx>140</posx>
                                <posy>61</posy>
                                <width>490</width>
                                <height>40</height>
                                <textcolor fallback="white">$INFO[Skin.String(GeneralTextColor)]</textcolor>
                                <label>$INFO[ListItem.Label2]</label>
                                <font>Light30</font>
                                <align>left</align>
                                <aligny>center</aligny>
                                <scroll>false</scroll>
                                <visible>!Skin.HasSetting(LoginScreen_HideLoginInfo)</visible>
                            </control>
                        </control>
                    </itemlayout>
                    <focusedlayout height="140" width="670">
                        <control type="group">
                            <animation effect="fade" start="100" end="30" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(52)">Conditional</animation>
                            <control type="image">
                                <width>100%</width>
                                <height>100%</height>
                                <texture border="5">diffuse/panel.png</texture>
                                <colordiffuse>$INFO[Skin.String(ButtonFocusColor)]</colordiffuse>
                            </control>
                            <control type="image">
                                <posx>0</posx>
                                <posy>0</posy>
                                <width>120</width>
                                <height>120</height>
                                <aspectratio>keep</aspectratio>
                                <texture background="true" fallback="common/profil/avatar.png">$INFO[Listitem.Icon]</texture>
                            </control>
                            <control type="label">
                                <posx>140</posx>
                                <posy>22</posy>
                                <width>490</width>
                                <height>40</height>
                                <textcolor fallback="mainblue">$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
                                <label>[B]$INFO[ListItem.Label][/B]</label>
                                <font>Light42</font>
                                <align>left</align>
                                <aligny>center</aligny>
                                <animation effect="slide" start="0" end="0,20" time="0" condition="Skin.HasSetting(LoginScreen_HideLoginInfo)">Conditional</animation>
                            </control>
                            <control type="label">
                                <posx>140</posx>
                                <posy>61</posy>
                                <width>490</width>
                                <height>40</height>
                                <textcolor fallback="mainblue">$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
                                <label>$INFO[ListItem.Label2]</label>
                                <font>Light30</font>
                                <align>left</align>
                                <aligny>center</aligny>
                                <scroll>false</scroll>
                                <visible>!Skin.HasSetting(LoginScreen_HideLoginInfo)</visible>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        
            <!-- Power button -->
            <control type="button" id="53">
                <description>powerbutton</description>
                <posx>930</posx>
                <bottom>20</bottom>
                <width>60</width>
                <height>60</height>
                <onup>52</onup>
                <ondown>52</ondown>
                <onright>52</onright>
                <onleft>52</onleft>
                <texturefocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">common/shutdown2.png</texturefocus>
                <texturenofocus colordiffuse="white">common/shutdown2.png</texturenofocus>
                <onclick condition="System.CanPowerDown">ActivateWindow(shutdownmenu)</onclick>
                <onclick condition="!System.CanPowerDown">Quit()</onclick>
                <visible>System.ShowExitButton</visible>
            </control>
        </control>
    </controls>
</window>